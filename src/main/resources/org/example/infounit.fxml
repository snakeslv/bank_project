<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="770.0" prefWidth="550.0" spacing="50.0" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.InfoUnitController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
      <Label text="Информационная панель" />
        <Button mnemonicParsing="false" onAction="#switchToGetBalance" prefHeight="32.0" prefWidth="300.0" text="Информация по номеру аккаунта">
         <VBox.margin>
            <Insets top="80.0" />
         </VBox.margin></Button>
        <Button mnemonicParsing="false" onAction="#switchToAllInfo" prefHeight="32.0" prefWidth="300.0" text="Сводка по всем аккаунтам" />
        <Button mnemonicParsing="false" onAction="#switchToExport" prefHeight="32.0" prefWidth="300.0" text="Экспорт пользователя / аккаунта" />
        <Button mnemonicParsing="false" onAction="#switchToImport" prefHeight="32.0" prefWidth="300.0" text="Импорт пользователя" />
        <Button mnemonicParsing="false" onAction="#switchToMenu" prefHeight="32.0" prefWidth="120.0" text="Назад" />
    </children>
</VBox>
