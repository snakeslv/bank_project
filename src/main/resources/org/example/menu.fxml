<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="550.0" spacing="50.0" stylesheets="@theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.MainSceneController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Добро пожаловать в систему управления банком!">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#switchToAccountOperations" prefHeight="32.0" prefWidth="270.0" text="Операции с банковским аккаунтом">
         <VBox.margin>
            <Insets top="100.0" />
         </VBox.margin></Button>
      <Button mnemonicParsing="false" onAction="#switchToRegistrationUnit" prefHeight="32.0" prefWidth="270.0" text="Регистрационная панель" />
      <Button mnemonicParsing="false" onAction="#switchToInformationUnit" prefHeight="32.0" prefWidth="270.0" text="Информационная панель / Экспорт" />
      <VBox alignment="CENTER" prefWidth="100.0">
         <children>
            <Label text="Перед работой в программе рекомендуется прочитать" />
            <Button mnemonicParsing="false" onAction="#switchToHelp" text="Справка">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="120.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
